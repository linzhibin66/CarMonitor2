<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/magin_15">

        <TextView
            android:id="@+id/maintenance_order_progress_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/maintenance_order_fault_title_h"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/magin_15"
            android:textSize="@dimen/maintenance_order_fault_title_text_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/order_progress_title"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_h"
            android:background="@color/base_line_color"
            android:layout_below="@id/maintenance_order_progress_title"
                />


        <com.easyder.carmonitor.widget.orderManager.UnderLineLinearLayout
            android:id="@+id/order_progress_content_layout"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:line_margin_side="24dp"
            app:line_dynamic_dimen="8dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@id/maintenance_order_progress_title"
            android:layout_marginTop="@dimen/magin_5"
            android:layout_marginBottom="@dimen/magin_13"
            >


        </com.easyder.carmonitor.widget.orderManager.UnderLineLinearLayout>

</RelativeLayout>
