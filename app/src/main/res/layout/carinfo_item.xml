<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/carinfo_item_h"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/carinfo_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/carinfo_icon"
            android:layout_width="@dimen/carinfo_item_icon_w"
            android:layout_height="@dimen/carinfo_item_h"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            />

        <TextView
            android:id="@+id/item_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/magin_10"
            android:layout_toRightOf="@id/carinfo_icon"
            android:text="安装日期"
            android:textColor="@color/black"
            android:textSize="@dimen/carinfo_textsize" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="100" />

        <TextView
            android:id="@+id/item_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="216dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/magin_10"
            android:textColor="@color/black"
            android:maxLines="3"
            android:textSize="@dimen/carinfo_textsize" />

        <ImageView
            android:id="@+id/arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/magin_10"
            android:scaleType="center"
            android:src="@mipmap/icon_next"
            android:visibility="gone"
            />
    </LinearLayout>
    <View
        android:id="@+id/carinfo_item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_h"
        android:background="@color/base_line_color"
        android:layout_below="@id/carinfo_item_layout"
        android:layout_marginLeft="@dimen/carinfo_item_icon_w"
        />
   <!-- <RelativeLayout
        android:id="@+id/click_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/carinfo_item_h"
        />-->
</RelativeLayout>