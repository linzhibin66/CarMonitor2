<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    
    <RelativeLayout
        android:id="@+id/orderinfo_content_layout"
        android:layout_width="@dimen/dialog_w"
        android:layout_height="match_parent"
        android:background="@drawable/title_bg"
        >

        <include
            android:id="@+id/title_layout"
            layout="@layout/base_title__text_layout"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_below="@id/title_layout"
            >


            <RelativeLayout
            android:id="@+id/maintenance_orderinfo_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/order_list_bg_color"
            >

            <TextView
                android:id="@+id/creat_maintenance_order_platenumber_title"
                android:layout_width="@dimen/creat_maintenance_order_title_w"
                android:layout_height="@dimen/creat_maintenance_order_item_h"
                android:paddingLeft="@dimen/magin_13"
                android:text="@string/carinfo_platenumber"
                android:gravity="center_vertical"
                android:textColor="@color/creat_maintenance_title_text_color"
                android:textSize="@dimen/creat_maintenance_order_title_textsize"
                android:background="@color/white"
                />

            <EditText
                android:id="@+id/creat_maintenance_order_platenumber_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/creat_maintenance_order_item_h"
                android:layout_toRightOf="@id/creat_maintenance_order_platenumber_title"
                android:background="@color/white"
                android:textColor="@color/creat_maintenance_title_text_color"
                android:lines="1"
                android:textSize="@dimen/creat_maintenance_order_title_textsize"
                />
            <View
                android:id="@+id/creat_maintenance_order_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/base_line_color"
                android:layout_below="@id/creat_maintenance_order_platenumber_title"
                />

            <TextView
                android:id="@+id/creat_maintenance_order_proposer_title"
                android:layout_width="@dimen/creat_maintenance_order_title_w"
                android:layout_height="@dimen/creat_maintenance_order_item_h"
                android:paddingLeft="@dimen/magin_13"
                android:layout_below="@id/creat_maintenance_order_1"
                android:text="@string/maintenance_order_proposer"
                android:gravity="center_vertical"
                android:textColor="@color/creat_maintenance_title_text_color"
                android:textSize="@dimen/creat_maintenance_order_title_textsize"
                android:background="@color/white"
                />

            <EditText
                android:id="@+id/creat_maintenance_order_proposer_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/creat_maintenance_order_item_h"
                android:layout_below="@id/creat_maintenance_order_1"
                android:layout_toRightOf="@id/creat_maintenance_order_proposer_title"
                android:background="@color/white"
                android:textColor="@color/creat_maintenance_title_text_color"
                android:lines="1"
                android:textSize="@dimen/creat_maintenance_order_title_textsize"
                />
            <View
                android:id="@+id/creat_maintenance_order_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/base_line_color"
                android:layout_below="@id/creat_maintenance_order_proposer_title"
                />

            <TextView
                android:id="@+id/creat_maintenance_order_contact_number_title"
                android:layout_width="@dimen/creat_maintenance_order_title_w"
                android:layout_height="@dimen/creat_maintenance_order_item_h"
                android:paddingLeft="@dimen/magin_13"
                android:layout_below="@id/creat_maintenance_order_3"
                android:text="@string/carinfo_phone"
                android:gravity="center_vertical"
                android:textColor="@color/creat_maintenance_title_text_color"
                android:textSize="@dimen/creat_maintenance_order_title_textsize"
                android:background="@color/white"
                />

            <EditText
                android:id="@+id/creat_maintenance_order_contact_number_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/creat_maintenance_order_item_h"
                android:layout_below="@id/creat_maintenance_order_3"
                android:layout_toRightOf="@id/creat_maintenance_order_contact_number_title"
                android:background="@color/white"
                android:textColor="@color/creat_maintenance_title_text_color"
                android:lines="1"
                android:textSize="@dimen/creat_maintenance_order_title_textsize"
                />
            <View
                android:id="@+id/creat_maintenance_order_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/base_line_color"
                android:layout_below="@id/creat_maintenance_order_contact_number_title"
                />

            <TextView
                android:id="@+id/creat_maintenance_order_appointment_time_title"
                android:layout_width="@dimen/creat_maintenance_order_title_w"
                android:layout_height="@dimen/creat_maintenance_order_item_h"
                android:paddingLeft="@dimen/magin_13"
                android:layout_below="@id/creat_maintenance_order_4"
                android:text="@string/maintenance_order_appointment_time"
                android:gravity="center_vertical"
                android:textColor="@color/creat_maintenance_title_text_color"
                android:textSize="@dimen/creat_maintenance_order_title_textsize"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/creat_maintenance_order_appointment_time_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/creat_maintenance_order_item_h"
                android:layout_below="@id/creat_maintenance_order_4"
                android:layout_toRightOf="@id/creat_maintenance_order_appointment_time_title"
                android:background="@color/white"
                android:textColor="@color/creat_maintenance_errordescribe_text_color"
                android:text="@string/maintenance_order_hint_platenumber_color"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/icon_next"
                android:paddingRight="@dimen/magin_19"
                android:textSize="@dimen/creat_maintenance_order_title_textsize"
                />
            <View
                android:id="@+id/creat_maintenance_order_5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/base_line_color"
                android:layout_below="@id/creat_maintenance_order_appointment_time_title"
                />

            <TextView
                android:id="@+id/creat_maintenance_order_appointment_location_title"
                android:layout_width="@dimen/creat_maintenance_order_title_w"
                android:layout_height="@dimen/creat_maintenance_order_item_h"
                android:paddingLeft="@dimen/magin_13"
                android:layout_below="@id/creat_maintenance_order_5"
                android:text="@string/maintenance_order_appointment_location"
                android:gravity="center_vertical"
                android:textColor="@color/creat_maintenance_title_text_color"
                android:textSize="@dimen/creat_maintenance_order_title_textsize"
                android:background="@color/white"
                />

            <EditText
                android:id="@+id/creat_maintenance_order_appointment_location_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/creat_maintenance_order_item_h"
                android:layout_below="@id/creat_maintenance_order_5"
                android:layout_toRightOf="@id/creat_maintenance_order_appointment_time_title"
                android:background="@color/white"
                android:textColor="@color/creat_maintenance_title_text_color"
                android:lines="2"
                android:textSize="@dimen/creat_maintenance_order_title_textsize"
                />

                <View
                    android:id="@+id/creat_maintenance_order_6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/base_line_color"
                    android:layout_below="@id/creat_maintenance_order_appointment_location_title"
                    />

                <TextView
                    android:id="@+id/creat_maintenance_order_errordescribe_title"
                    android:layout_width="@dimen/creat_maintenance_order_title_w"
                    android:layout_height="@dimen/creat_maintenance_order_item_h"
                    android:paddingLeft="@dimen/magin_13"
                    android:layout_below="@id/creat_maintenance_order_6"
                    android:text="@string/maintenance_order_errordescribe"
                    android:gravity="center_vertical"
                    android:textColor="@color/creat_maintenance_title_text_color"
                    android:textSize="@dimen/creat_maintenance_order_title_textsize"
                    android:background="@color/white"
                    />

                <EditText
                    android:id="@+id/creat_maintenance_order_errordescribe_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/creat_maintenance_order_item_h"
                    android:layout_below="@id/creat_maintenance_order_6"
                    android:layout_toRightOf="@id/creat_maintenance_order_appointment_time_title"
                    android:background="@color/white"
                    android:textColor="@color/creat_maintenance_title_text_color"
                    android:lines="2"
                    android:textSize="@dimen/creat_maintenance_order_title_textsize"
                    android:hint="@string/maintenance_order_hint_errordescribe"
                    android:textColorHint="@color/creat_maintenance_errordescribe_text_color"
                    />

                <View
                    android:id="@+id/creat_maintenance_order_7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/base_line_color"
                    android:layout_below="@id/creat_maintenance_order_errordescribe_title"
                    />

                <RelativeLayout
                    android:id="@+id/create_order_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/creat_maintenance_order_item_h"
                    android:layout_below="@id/creat_maintenance_order_7"
                    android:background="@color/white"
                    >

                    <TextView
                        android:id="@+id/create_order_text_ordernumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/magin_13"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/creat_maintenance_title_text_color"
                        android:textSize="@dimen/creat_maintenance_order_title_textsize"
                        android:background="@color/white"
                        />

                    <TextView
                        android:id="@+id/create_order_createbuttom"
                        android:layout_width="@dimen/creat_maintenance_createbuttom_w"
                        android:layout_height="@dimen/creat_maintenance_createbuttom_h"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:background="@drawable/create_order_buttom_bg_p"
                        android:textColor="@color/creat_maintenance_createbutton_on_color"
                        android:text="创建"
                        android:layout_marginRight="@dimen/magin_19"

                        />


                </RelativeLayout>

            <RelativeLayout
                android:id="@+id/upload_img_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_order_layout"
                android:background="@color/white"
                android:layout_marginTop="@dimen/magin_10"
                >

                <com.easyder.carmonitor.widget.orderManager.MyGridView
                    android:id="@+id/creat_maintenance_order_imglist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/magin_13"
                    android:layout_marginLeft="@dimen/magin_13"
                    android:horizontalSpacing="@dimen/magin_5"
                    android:verticalSpacing="@dimen/magin_5"
                    android:numColumns="4"
                    android:layout_marginBottom="@dimen/magin_10"
                    />

            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/upload_img_layout">

                <TextView
                    android:id="@+id/commit_create_maintenance_order"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@color/creat_maintenance_createbutton_on_color"
                    android:layout_marginTop="@dimen/magin_10"
                    android:layout_alignParentBottom="true"
                    android:text="@string/commit"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />

                </RelativeLayout>



                <!---->
                
        </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/creat_maintenance_orderinfo_layout_outmost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:layout_toRightOf="@id/orderinfo_content_layout"
        >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/maintenance_orderinfo_enter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:layout_toLeftOf="@id/creat_maintenance_orderinfo_layout_outmost"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        >

    </RelativeLayout>

</RelativeLayout>
