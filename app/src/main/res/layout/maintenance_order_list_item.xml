<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    >
    
    <TextView
        android:id="@+id/order_type"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="@dimen/magin_13"
        android:layout_marginBottom="@dimen/magin_13"
        android:layout_marginLeft="@dimen/magin_19"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/order_list_item_orderstatus_textsize"
        android:text="安装"
        android:background="@drawable/order_list_item_orderstatus_maintenance_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/order_type"
        android:layout_marginLeft="@dimen/magin_16"
        android:layout_centerVertical="true"
        >

        <RelativeLayout
            android:id="@+id/order_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/order_list_item_platenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_toRightOf="@id/alarm_status"
                android:textSize="@dimen/order_list_item_title_textsize"
                android:text="GDH20171103"
                android:textStyle="bold"
                android:textColor="@color/order_list_item_orderNumber_text"
                />
            <TextView
                android:id="@+id/order_list_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_next"
                android:textColor="@color/order_status_text_color"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/magin_16"
                android:drawablePadding="@dimen/magin_5"
                android:textSize="@dimen/order_list_item_title_textsize"
                android:text="待接单"

                />

        </RelativeLayout>


        <TextView
            android:id="@+id/order_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_3"
            android:layout_below="@id/order_number_layout"
            android:textSize="@dimen/order_list_item_textsize"
            android:textColor="@color/order_list_item_text"
            android:text="李先生"
            />
        <TextView
            android:id="@+id/order_list_item_addres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_number_layout"
            android:layout_toRightOf="@id/order_list_item_time"
            android:layout_marginLeft="@dimen/magin_5"
            android:layout_marginTop="@dimen/magin_3"
            android:textSize="@dimen/order_list_item_textsize"
            android:textColor="@color/order_list_item_text"
            android:text="13688888888"
            />


        <TextView
            android:id="@+id/maintenance_evaluate_ctrl"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/maintenance_evaluate"
            android:layout_below="@id/order_number_layout"
            android:layout_marginTop="@dimen/magin_8"
            android:drawablePadding="@dimen/magin_10"
            android:layout_marginRight="@dimen/magin_16"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/magin_8"
            android:paddingRight="@dimen/magin_8"
            android:background="@drawable/maintenance_evaluate_bg"
            android:textColor="@color/maintenance_evaluate_text_color"
            android:visibility="gone"
            android:text="服务评价"
            />

    </RelativeLayout>

