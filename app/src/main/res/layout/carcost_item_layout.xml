<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    
    <TextView
        android:id="@+id/item_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/carcost_item_text_h"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/magin_14"
        android:textColor="@color/carcost_item_title_textcolor"
        android:drawableLeft="@mipmap/install_carlist_icon"
        android:textStyle="bold"
        android:textSize="@dimen/carcost_item_text_size"
        android:drawablePadding="@dimen/magin_10"
        android:text="GPS服务费"

        />

    <View
        android:id="@+id/item_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_layout_title"
        android:background="@color/base_line_color"
        />
        <LinearLayout
            android:id="@+id/carcost_items_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title_line"
            android:orientation="vertical"
            android:background="@color/white"
            >

        </LinearLayout>

</RelativeLayout>