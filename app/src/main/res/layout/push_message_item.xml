<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/message_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/push_message_time_text_size"
        android:text="03月03日 12:12"
        android:textStyle="bold"
        android:textColor="@color/push_message_time_text_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/magin_7"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/magin_8"
        android:layout_marginRight="@dimen/magin_8"
        android:layout_marginTop="@dimen/magin_5"
        android:layout_marginBottom="@dimen/magin_5"
        android:paddingTop="@dimen/magin_16"
        android:paddingBottom="@dimen/magin_16"
        android:layout_below="@id/message_send_time"
        android:background="@drawable/bg_push_message"
        >
        <TextView
            android:id="@+id/message_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/push_message_type_text_size"
            android:layout_marginLeft="@dimen/magin_8"
            android:text="续缴服务费通知"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/message_content"
            android:layout_below="@id/message_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/push_message_type_text_size"
            android:layout_marginTop="@dimen/magin_8"
            android:layout_marginLeft="@dimen/magin_8"
            android:text="您的车辆粤S 222255的服务费将于2017年2月23日到期，请及时续费以免影响正常使用。"
            android:textColor="@color/push_message_content_text_color"
            />

    </RelativeLayout>

</RelativeLayout>