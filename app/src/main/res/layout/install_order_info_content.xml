<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/order_list_bg_color"
    >

    <TextView
        android:id="@+id/intall_time_title"
        android:layout_width="@dimen/creat_maintenance_order_title_w"
        android:layout_height="@dimen/install_order_info_item_h"
        android:paddingLeft="@dimen/magin_13"
        android:text="@string/install_order_time"
        android:gravity="center_vertical"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/intall_time_title_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/install_order_info_item_h"
        android:layout_toRightOf="@id/intall_time_title"
        android:background="@color/white"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:paddingRight="@dimen/magin_14"
        android:gravity="right|center_vertical"
        android:lines="1"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        />
    <View
        android:id="@+id/creat_maintenance_order_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_line_color"
        android:layout_below="@id/intall_time_title"
        />

    <TextView
        android:id="@+id/install_location_title"
        android:layout_width="@dimen/creat_maintenance_order_title_w"
        android:layout_height="@dimen/install_order_info_item_h"
        android:paddingLeft="@dimen/magin_13"
        android:layout_below="@id/creat_maintenance_order_1"
        android:text="@string/install_order_location"
        android:gravity="center_vertical"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/install_location_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/install_order_info_item_h"
        android:layout_below="@id/creat_maintenance_order_1"
        android:layout_toRightOf="@id/install_location_title"
        android:background="@color/white"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:paddingRight="@dimen/magin_14"
        android:gravity="right|center_vertical"
        android:lines="1"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        />
    <View
        android:id="@+id/creat_maintenance_order_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_line_color"
        android:layout_below="@id/install_location_title"
        />

    <TextView
        android:id="@+id/install_count_title"
        android:layout_width="@dimen/creat_maintenance_order_title_w"
        android:layout_height="@dimen/install_order_info_item_h"
        android:paddingLeft="@dimen/magin_13"
        android:layout_below="@id/creat_maintenance_order_3"
        android:text="@string/install_order_count"
        android:gravity="center_vertical"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/install_count_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/install_order_info_item_h"
        android:layout_below="@id/creat_maintenance_order_3"
        android:layout_toRightOf="@id/install_count_title"
        android:background="@color/white"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:paddingRight="@dimen/magin_14"
        android:gravity="right|center_vertical"
        android:lines="1"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        />
    <View
        android:id="@+id/creat_maintenance_order_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_line_color"
        android:layout_below="@id/install_count_title"
        />

    <TextView
        android:id="@+id/install_type_title"
        android:layout_width="@dimen/creat_maintenance_order_title_w"
        android:layout_height="@dimen/install_order_info_item_h"
        android:paddingLeft="@dimen/magin_13"
        android:layout_below="@id/creat_maintenance_order_4"
        android:text="@string/install_order_type"
        android:gravity="center_vertical"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/install_type_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/install_order_info_item_h"
        android:layout_below="@id/creat_maintenance_order_4"
        android:layout_toRightOf="@id/install_type_title"
        android:background="@color/white"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:paddingRight="@dimen/magin_14"
        android:gravity="right|center_vertical"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        />
    <View
        android:id="@+id/creat_maintenance_order_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_line_color"
        android:layout_below="@id/install_type_title"
        />

    <TextView
        android:id="@+id/install_order_contact_title"
        android:layout_width="@dimen/creat_maintenance_order_title_w"
        android:layout_height="@dimen/install_order_info_item_h"
        android:paddingLeft="@dimen/magin_13"
        android:layout_below="@id/creat_maintenance_order_5"
        android:text="@string/carinfo_contact"
        android:gravity="center_vertical"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/install_order_contact_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/install_order_info_item_h"
        android:layout_below="@id/creat_maintenance_order_5"
        android:layout_toRightOf="@id/install_order_contact_title"
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:paddingRight="@dimen/magin_14"
        android:lines="2"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        />

    <View
        android:id="@+id/creat_maintenance_order_6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_line_color"
        android:layout_below="@id/install_order_contact_title"
        />

    <TextView
        android:id="@+id/install_order_contact_phone_title"
        android:layout_width="@dimen/creat_maintenance_order_title_w"
        android:layout_height="@dimen/install_order_info_item_h"
        android:paddingLeft="@dimen/magin_13"
        android:layout_below="@id/creat_maintenance_order_6"
        android:text="@string/install_contact_phone"
        android:gravity="center_vertical"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/install_order_contact_phone_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/install_order_info_item_h"
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:layout_toRightOf="@id/install_order_contact_phone_title"
        android:paddingRight="@dimen/magin_14"
        android:lines="2"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        android:layout_below="@+id/creat_maintenance_order_6"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/install_order_carlist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/install_order_info_item_h"
        android:layout_below="@id/install_order_contact_phone_value"
        android:layout_marginTop="@dimen/magin_8"
        android:paddingLeft="@dimen/magin_13"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:textColor="@color/creat_maintenance_title_text_color"
        android:text="@string/install_order_car_list"
        android:lines="2"
        android:textSize="@dimen/creat_maintenance_order_title_textsize"
        android:drawableRight="@mipmap/icon_next"
        android:paddingRight="@dimen/magin_14"
        />


</RelativeLayout>