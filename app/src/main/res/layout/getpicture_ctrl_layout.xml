<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/getpicture_to_shoot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/creat_maintenance_order_picture_ctrl_item_h"
        android:text="@string/getpicture_to_shoot"
        android:background="@color/white"
        android:textSize="@dimen/creat_maintenance_order_picture_ctrl_item_textsixe"
        android:textColor="@color/creat_maintenance_getpicture_item_text_color"
        android:gravity="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_line_color"
        />

    <TextView
        android:id="@+id/getpicture_to_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/creat_maintenance_order_picture_ctrl_item_h"
        android:text="@string/getpicture_to_photo"
        android:background="@color/white"
        android:textSize="@dimen/creat_maintenance_order_picture_ctrl_item_textsixe"
        android:textColor="@color/creat_maintenance_getpicture_item_text_color"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/cancle_to_getpicture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/creat_maintenance_order_picture_ctrl_item_h"
        android:text="@string/cancel"
        android:background="@color/white"
        android:layout_marginTop="@dimen/magin_5"
        android:textSize="@dimen/creat_maintenance_order_picture_ctrl_item_textsixe"
        android:textColor="@color/creat_maintenance_getpicture_item_text_color"
        android:gravity="center"
        />


</LinearLayout>