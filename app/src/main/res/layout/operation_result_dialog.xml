<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/operation_result_bg"
        android:gravity="center_vertical"
        >

        　<ImageView
            android:id="@+id/operation_result_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_operation_ok"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/operation_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/input_operation_result_text_size"
            android:layout_below="@id/operation_result_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/magin_15"
            android:textColor="@color/operation_result_textcolor"
            android:text="指令已发送"
            />

    </RelativeLayout>


</RelativeLayout>