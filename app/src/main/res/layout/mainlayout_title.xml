<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="@dimen/title_hight"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/magin_12"
        android:layout_marginRight="@dimen/magin_12"
        android:background="@drawable/main_title_bg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <!--<com.easyder.carmonitor.widget.RoundImageView
            android:id="@+id/main_usericon"
            android:layout_width="@dimen/usericon_wh"
            android:layout_height="@dimen/usericon_wh"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/magin_10"
            android:layout_marginRight="@dimen/magin_10"
            android:scaleType="center"
            android:src="@mipmap/icon_profile_photo"
            />-->

        <ImageView
            android:id="@+id/main_usericon"
            android:layout_width="@dimen/usericon_wh"
            android:layout_height="@dimen/usericon_wh"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/magin_10"
            android:layout_marginRight="@dimen/magin_10"
            android:scaleType="center"
            android:src="@mipmap/icon_profile_photo"
            android:layout_weight="0.44" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#FFBBBBBB"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/usericon_wh"
            android:layout_weight="100"
            android:layout_marginLeft="@dimen/magin_10"
            android:layout_marginRight="@dimen/magin_10"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:layout_width="@dimen/search_icon"
                android:layout_height="@dimen/search_icon"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_search_main"
                />

            <EditText
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search_hint"
                android:textColor="@color/title_search_text_color"
                android:textColorHint="@color/title_search_text_hint_color"
                android:textSize="@dimen/search_text"
                android:layout_marginLeft="@dimen/magin_7"
                android:background="@null"
                />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#FFBBBBBB"
            android:layout_gravity="center_vertical"
            />

        <ImageButton
            android:id="@+id/main_menu"
            android:layout_width="@dimen/menu_wh"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_list"
            android:scaleType="center"
            android:background="@null"

            />

        <TextView
            android:id="@+id/cancel_search"
            android:layout_width="@dimen/menu_wh"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:gravity="center"
            android:textColor="@color/search_cancel_text_color"
            android:textSize="@dimen/search_text"
            android:visibility="gone"
            />

    </LinearLayout>
</RelativeLayout>