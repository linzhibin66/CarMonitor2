<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/magin_15">

        <TextView
            android:id="@+id/maintenance_order_fault_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/maintenance_order_fault_title_h"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/magin_15"
            android:textSize="@dimen/maintenance_order_fault_title_text_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/maintenance_order_fault_title"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_h"
            android:background="@color/base_line_color"
            android:layout_below="@id/maintenance_order_fault_title"
                />

        <TextView
            android:id="@+id/maintenance_fault_description_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/maintenance_end_time"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginTop="@dimen/magin_15"
            android:layout_below="@id/maintenance_order_fault_title"
            android:textSize="@dimen/maintenance_order_fault_content_text_size"
            android:text="定位经常无故掉线，无法正常使用"
            android:textColor="@color/black"
            />

        <com.easyder.carmonitor.widget.orderManager.MyGridView
            android:id="@+id/img_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/magin_5"
            android:verticalSpacing="@dimen/magin_5"
            android:numColumns="4"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginRight="@dimen/magin_15"
            android:layout_marginTop="@dimen/magin_15"
            android:layout_below="@id/maintenance_fault_description_value"
            />

</RelativeLayout>
