<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/magin_15">

        <TextView
            android:id="@+id/maintenance_order_valuation_result_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/valuation_result_item_layout_title_h"
            android:layout_marginLeft="@dimen/magin_15"
            android:textSize="@dimen/valuation_result_item_layout_title_text_size"
            android:gravity="center"
            android:text="@string/service_valuation"
            android:textColor="@color/valuation_result_item_layout_title_text_color"
            android:textStyle="bold"
            />

        <View
            android:id="@+id/maintenance_order_valuation_result_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/base_line_color"
            android:layout_below="@id/maintenance_order_valuation_result_title"
            />

        <TextView
            android:id="@+id/ratingBar_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/magin_15"
            android:layout_below="@id/maintenance_order_valuation_result_line"
            android:layout_marginLeft="@dimen/magin_15"
            android:gravity="center_vertical"
            android:textColor="@color/valuation_result_title_text_color"
            android:text="@string/service_text"
            />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/maintenance_order_valuation_result_line"
            android:layout_toRightOf="@id/ratingBar_text"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5"
            android:layout_marginTop="@dimen/magin_15"
            style="@style/foodRatingBar_item"
            android:layout_marginRight="@dimen/magin_14"
            />

        <TextView
            android:id="@+id/evaluate_time"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/magin_15"
            android:layout_below="@id/maintenance_order_valuation_result_line"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/magin_15"
            android:textColor="@color/valuation_result_title_text_color"
            />

        <TextView
            android:id="@+id/termain_status_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/magin_15"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_below="@id/ratingBar"
            android:textColor="@color/valuation_result_title_text_color"
            android:text="@string/valuation_termain_status_reslut"
            />

        <TextView
            android:id="@+id/car_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_15"
            android:layout_below="@id/termain_status_text"
            android:layout_marginLeft="@dimen/magin_15"
            android:textColor="@color/valuation_result_title_text_color"
            android:text="@string/valuation_carstatus_reslut"
            />

        <!--<com.easyder.carmonitor.widget.orderManager.MyGridView
            android:id="@+id/select_valuation_gridview"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginRight="@dimen/magin_15"
            android:layout_marginTop="@dimen/magin_13"
            android:verticalSpacing="@dimen/magin_5"
            android:gravity="center"
            android:numColumns="3"
            android:listSelector="#00000000"
            android:layout_below="@id/car_status_text"
            />-->

        <TextView
            android:id="@+id/maintenance_order_valuation_result_other_suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginTop="@dimen/magin_13"
            android:layout_below="@id/car_status_text"
            android:textColor="@color/valuation_result_item_layout_title_text_color"
            android:textSize="@dimen/valuation_result_item_layout_other_suggestion_text_size"
            android:text="维修师傅专业服务态度好！"
            />

</RelativeLayout>
